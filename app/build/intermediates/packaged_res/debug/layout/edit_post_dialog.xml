<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"

    >


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Give some information you to church members"
        android:textAlignment="center" />
    <EditText

    android:id="@+id/editInformationTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView8"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="11dp"
    android:layout_marginEnd="25dp"
    android:ems="10"

    android:hint="Title"
    android:minHeight="48dp" />

    <EditText
        android:id="@+id/editInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editInformationTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="25dp"
        android:ems="10"

        android:hint="information"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/toPost"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="170dp"


        android:background="@color/reg"
        android:text="Post"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="20dp" />


</LinearLayout>