<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="5dp"
       android:layout_marginBottom="5dp"
       android:padding="10dp"
       android:elevation="10dp"
       app:cardBackgroundColor="@color/reg"
       app:cardCornerRadius="8dp"


       app:cardElevation="8dp"
       app:cardMaxElevation="10dp"
       app:cardPreventCornerOverlap="true"
       app:cardUseCompatPadding="true"
       >




           <LinearLayout
               android:id="@+id/addNotification"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/TimeShedule"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="church members " />
               <TextView
                   android:id="@+id/dateSchedule"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="church members " />

               <TextView
                   android:id="@+id/textView2"
                   android:drawableEnd="@drawable/add"

                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:text="I will be giving the church service" />
           </LinearLayout>




   </androidx.cardview.widget.CardView>


</RelativeLayout>