<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".profileFraments.NotificationFragment">

<androidx.appcompat.widget.SwitchCompat
    android:id="@+id/switchPhoneButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    android:text="@string/get_phone_number_notification"
    android:textOn="@string/on"
    android:textOff="@string/off"
    app:showText="true"
    android:thumb="@drawable/thumb_switch"
    app:track="@drawable/switch_track"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/get_email_notification_monthly"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:thumb="@drawable/thumb_switch"
        app:showText="true"
        app:track="@drawable/switch_track" />


</LinearLayout>